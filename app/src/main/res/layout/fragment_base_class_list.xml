    app:elevation="1dp"
    android.support.v7.widget.CardView-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_item_container"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:orientation="vertical"
    android:background="#fff"
    >
    <LinearLayout
        android:id="@+id/list_class"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_course" />

        <TextView
            android:id="@+id/base_couse_title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:text="测试课程"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_pos"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/base_pos_title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:textSize="15sp"
            android:text="W7102"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_tea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_js" />

        <TextView
            android:id="@+id/base_tea_title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:textSize="15sp"
            android:text="显示老师"/>
    </LinearLayout>
</LinearLayout>
